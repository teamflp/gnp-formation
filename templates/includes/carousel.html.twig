<!-- Carousel Start -->
<div class="container-fluid p-0 mb-5">
    <div class="owl-carousel header-carousel position-relative">
        {% for carousel in getCarousel() %}
            <div class="owl-carousel-item position-relative">
                <img class="img-fluid" src="{{ asset('uploads/carousel/' ~ carousel.image) }}" alt={{ carousel.titre }}>
                <div class="position-absolute top-0 start-0 w-100 h-100 d-flex align-items-center" style="background: rgba(24, 29, 56, .7);">
                    <div class="container">
                        <div class="row justify-content-start">
                            <div class="col-sm-10 col-lg-8">
                                <h5 class="text-primary text-uppercase mb-3 animated slideInDown">{{ carousel.titre }}</h5>
                                <h1 class="display-3 text-white animated slideInDown">{{ carousel.sousTitre }}</h1>
                                <div class="fs-5 text-white mb-4 pb-2">
                                    <p>{{ carousel.description|raw }}</p>
                                </div>

                                <a href="" class="btn btn-primary py-md-3 px-md-5 me-3 animated slideInLeft">{{ carousel.btnInfo }}</a>
                                <a href="" class="btn btn-light bouton py-md-3 px-md-5 animated slideInRight">{{ carousel.btnInscription }}</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
<!-- Carousel End -->