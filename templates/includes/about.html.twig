<!-- About Start -->
<div class="container-xxl py-5">
    <div class="container">
        <div class="row g-5">
            <div class="col-lg-6 wow fadeInUp" data-wow-delay="0.1s" style="min-height: 400px;">
                {% for aboutImage in getAbout() %}
                    <div class="position-relative h-100">
                        <img class="img-fluid position-absolute w-100 h-100" src="{{ asset('uploads/img/' ~ aboutImage.image) }}" alt="" style="object-fit: cover;">
                    </div>
                {% endfor %}
            </div>
            <div class="col-lg-6 wow fadeInUp" data-wow-delay="0.3s">
                {% for about in getAbout() %}
                    <h6 class="section-title bg-white text-start text-primary pe-3">{{ about.titre }}</h6>
                    <h1 class="mb-4">{{ about.sousTitre }}</h1>
                    <p class="mb-4">{{ about.description|raw }}</p>
                {% endfor %}
                <div class="row gy-2 gx-4 mb-4">
                    {% for aboutCategory in getAboutCategory() %}
                        <div class="col-sm-6">
                            <p class="mb-0"><i class="fa fa-arrow-right text-primary me-2"></i>{{ aboutCategory.category }}</p>
                        </div>
                    {% endfor %}
                </div>
                <a class="btn btn-primary bouton py-3 px-5 mt-2" href="">En savoir plus</a>
            </div>
        </div>
    </div>
</div>
<!-- About End -->
